from colorama import Fore
from colorama import Style

class Pet:
	def __init__(self, species, name, age):
		self.species = species
		self.name = name
		self.age = age

	def show_info(self):
		print(f"I am a {Fore.GREEN + self.species + Style.RESET_ALL} named {Fore.YELLOW + self.name + Style.RESET_ALL} and I am {Fore.CYAN + str(self.age) + Style.RESET_ALL} years old") # Convert ints to string to prevent confusion when concatenating the 
	def speak(self):
		print("I don't know what I say")

class Cat(Pet):
	def speak(self):
		print("Meow")


class Dog(Pet):
	def speak(self):
		print("Bark")


class Goat(Pet):
	def speak(self):
		print("Bleat")

class Fish(Pet):
	pass


